<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-lg-8 align-center">
<span class="error text-danger">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
</span>

                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    <label>Date<span class="text-danger">*</span></label>
                    {{ form_widget(form.date) }}
                </div>
                <div class="form-group">
                    <label>Duree<span class="text-danger">*</span></label>
                    {{ form_widget(form.duree) }}
                </div>
                <div class="form-group">
                    <label>Utilisateur<span class="text-danger">*</span></label>
                    {{ form_widget(form.utilisateur) }}
                </div>

                <div class="form-group">
                    <label>Chantier<span class="text-danger">*</span></label>
                    {{ form_widget(form.chantier) }}
                </div>

                <input type="submit" class="btn btn-primary"/>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
